[flake8]
max-line-length = 88
extend-ignore = E203, W503, E402, C901
# Allow long lines in all Python files (mostly for copyright headers)
# The critical style issues (tabs, imports, f-strings) have been fixed
per-file-ignores = 
    *.py: E501

# Exclude directories
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
max-complexity = 10